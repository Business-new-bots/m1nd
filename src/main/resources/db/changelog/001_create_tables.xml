<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Создание таблицы users -->
    <changeSet id="001_create_table_users" author="m1nd">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users" remarks="Пользователи бота">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="registered_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="first_activity_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="last_activity_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
            <column name="questions_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="total_messages" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="sessions_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="is_returning_user" type="BOOLEAN" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_users_user_id" tableName="users">
            <column name="user_id"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>

    <!-- Создание таблицы admins -->
    <changeSet id="002_create_table_admins" author="m1nd">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="admins"/>
            </not>
        </preConditions>
        <createTable tableName="admins" remarks="Администраторы бота">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="added_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="added_by" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_admins_username" tableName="admins">
            <column name="username"/>
        </createIndex>
        
        <rollback>
            <dropTable tableName="admins"/>
        </rollback>
    </changeSet>

    <!-- Создание таблицы feedbacks -->
    <changeSet id="003_create_table_feedbacks" author="m1nd">
        <preConditions onFail="CONTINUE">
            <not>
                <tableExists tableName="feedbacks"/>
            </not>
        </preConditions>
        <createTable tableName="feedbacks" remarks="Опросы пользователей">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="feedback_id" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="rating" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="was_useful" type="BOOLEAN">
                <constraints nullable="true"/>
            </column>
            <column name="comment" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="question" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex indexName="idx_feedbacks_user_id" tableName="feedbacks">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex indexName="idx_feedbacks_created_at" tableName="feedbacks">
            <column name="created_at"/>
        </createIndex>
        
        <addForeignKeyConstraint 
            baseTableName="feedbacks" 
            baseColumnNames="user_id" 
            constraintName="fk_feedbacks_user_id"
            referencedTableName="users" 
            referencedColumnNames="user_id"
            onDelete="CASCADE"/>
        
        <rollback>
            <dropTable tableName="feedbacks"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
